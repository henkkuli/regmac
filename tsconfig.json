{
    "compileOnSave": false,
    "include": [
        "**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ],
    "compilerOptions": {
        "alwaysStrict": true,
        "noImplicitAny": false,
        "charset": "utf-8",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "lib": [
            "es2015",
            "es2015.promise",
            "dom"
        ]
    }
}
