{
    "compileOnSave": false,
    "include": [
        "*"
    ],
    "exclude": [
        "node_modules"
    ],
    "compilerOptions": {
        "alwaysStrict": true,
        "charset": "utf-8",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es2018",
        "module": "commonjs",
        "moduleResolution": "node",
        "lib": [
            "es2015"
        ]
    }
}